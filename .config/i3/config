# i3 config file (v4)

set_from_resource $border i3.border 2
set_from_resource $fontSize i3.fontSize 16
set_from_resource $gaps i3.gaps 0

font pango:JetBrains Mono Nerd Font $fontSize
gaps inner $gaps
default_border none
default_floating_border none
focus_follows_mouse no

set $mod Mod4

bindsym $mod+q kill
bindsym $mod+r reload
bindsym $mod+Ctrl+r restart

bindsym $mod+Escape exec --no-startup-id ~/.config/rofi/scripts/power.sh
bindsym $mod+w exec --no-startup-id ~/.config/rofi/scripts/main.sh
bindsym $mod+b exec --no-startup-id ~/.config/rofi/scripts/background.sh
bindsym $mod+e exec --no-startup-id i3-sensible-terminal

bindsym $mod+f fullscreen disable; floating toggle
bindsym $mod+Ctrl+f floating disable; fullscreen toggle
bindsym $mod+Shift+f focus mode_toggle

floating_modifier $mod
bindsym --whole-window $mod+button2 kill
bindsym --whole-window $mod+button3 fullscreen disable; floating toggle
bindsym --whole-window $mod+Ctrl+button3 floating disable; fullscreen toggle
bindsym --whole-window $mod+button4 resize grow width 25 px or 10 ppt; resize grow height 25 px or 10 ppt
bindsym --whole-window $mod+button5 resize shrink width 25 px or 10 ppt; resize shrink height 25 px or 10 ppt

bindsym --release Print exec --no-startup-id "maim -Blsu --color=0,0,0,0.75 | xclip -selection clipboard -t image/png"
bindsym $mod+Print exec --no-startup-id "maim -Bu -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png"
bindsym $mod+Ctrl+Print exec --no-startup-id "maim -u | xclip -selection clipboard -t image/png"

bindsym $mod+Left focus left; split h
bindsym $mod+Down focus down; split v
bindsym $mod+Up focus up; split v
bindsym $mod+Right focus right; split h

bindsym $mod+Ctrl+Left move left
bindsym $mod+Ctrl+Down move down
bindsym $mod+Ctrl+Up move up
bindsym $mod+Ctrl+Right move right

bindsym $mod+Shift+Left resize shrink width 25 px or 10 ppt
bindsym $mod+Shift+Down resize grow height 25 px or 10 ppt
bindsym $mod+Shift+Up resize shrink height 25 px or 10 ppt
bindsym $mod+Shift+Right resize grow width 25 px or 10 ppt

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

bindsym $mod+Ctrl+1 move container to workspace number $ws1
bindsym $mod+Ctrl+2 move container to workspace number $ws2
bindsym $mod+Ctrl+3 move container to workspace number $ws3
bindsym $mod+Ctrl+4 move container to workspace number $ws4
bindsym $mod+Ctrl+5 move container to workspace number $ws5
bindsym $mod+Ctrl+6 move container to workspace number $ws6
bindsym $mod+Ctrl+7 move container to workspace number $ws7
bindsym $mod+Ctrl+8 move container to workspace number $ws8
bindsym $mod+Ctrl+9 move container to workspace number $ws9
bindsym $mod+Ctrl+0 move container to workspace number $ws10
bindsym $mod+Ctrl+Tab move container to workspace next
bindsym $mod+Ctrl+Shift+Tab move container to workspace prev

set_from_resource $bg1 background #000000
set_from_resource $bg2 color2 #00FF00
set_from_resource $fg foreground #FFFFFF

# class                 border  backgr. text    indicator child_border
client.focused          $fg     $fg     $bg2    $fg       $fg
client.focused_inactive $bg2    $bg2    $fg     $bg2      $bg2
client.unfocused        $bg2    $bg2    $fg     $bg2      $bg2
client.urgent           $bg2    $bg2    $fg     $bg2      $bg2
client.placeholder      $bg2    $bg2    $fg     $bg2      $bg2

client.background       $bg1

exec_always --no-startup-id picom --experimental-backends --config ~/.config/picom/picom.conf
exec_always --no-startup-id ~/.config/polybar/launch.sh
exec_always --no-startup-id nm-applet
