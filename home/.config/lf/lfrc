# Options
set hidden    # Show hidden files
set icons     # Enable icons
set tabstop 4 # Set tab width

set previewer ~/.config/lf/previewer.sh

# File system shortcuts
map gh cd
map gD cd ~/Downloads
map gd cd ~/Documents
map gp cd ~/Pictures
map gm cd ~/Music
map gv cd ~/Videos
map g. cd ~/.dotfiles
map gc cd ~/.config
map gC cd ~/.cache
map gl cd ~/.local
map gr cd /
map gM cd /run/media

# Background mappings
map bc $~/.config/lf/setbg.sh --bg-center $f
map bf $~/.config/lf/setbg.sh --bg-fill $f
map bm $~/.config/lf/setbg.sh --bg-max $f
map bs $~/.config/lf/setbg.sh --bg-scale $f
map bt $~/.config/lf/setbg.sh --bg-tile $f

map bac $~/.config/lf/setbg.sh --force-aliasing --bg-center $f
map baf $~/.config/lf/setbg.sh --force-aliasing --bg-fill $f
map bam $~/.config/lf/setbg.sh --force-aliasing --bg-max $f
map bas $~/.config/lf/setbg.sh --force-aliasing --bg-scale $f
map bat $~/.config/lf/setbg.sh --force-aliasing --bg-tile $f

